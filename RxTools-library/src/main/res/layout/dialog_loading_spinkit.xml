<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/aa_dialog_bg"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="36px"
              android:paddingLeft="72px"
              android:paddingRight="72px"
              android:paddingTop="36px">


    <com.vondear.rxtools.view.progress.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20px"
        app:SpinKit_Color="@color/blue1"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20px"
        android:text="正在进行网络请求..."
        android:textColor="@color/brown"
        android:textSize="34px"/>

</LinearLayout>