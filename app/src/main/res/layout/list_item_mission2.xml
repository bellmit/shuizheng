<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <Button
        android:id="@+id/state_btn"
        android:layout_width="25px"
        android:layout_height="60px"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="10px"
        android:background="@drawable/mission_state_bg3"
        android:clickable="false"
        android:gravity="center"
        android:textSize="36px"
        android:text="√"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20px"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/colorMain6"
            android:textSize="38px" />

        <TextView
            android:id="@+id/datetime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMain4"
            android:textSize="38px" />

        <TextView
            android:id="@+id/detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorMain4"
            android:ellipsize="end"
            android:textSize="38px" />

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMain4"
            android:textSize="38px" />

    </LinearLayout>


    <Button
        android:id="@+id/deal_btn"
        android:layout_width="90px"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:layout_margin="10px"
        android:background="@drawable/datetimeview_bg"
        android:foreground="?attr/selectableItemBackground"
        android:text="处 理"
        android:textColor="@color/colorMain4"
        android:textSize="36px"/>


</LinearLayout>