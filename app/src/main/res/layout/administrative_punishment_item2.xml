<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <ImageView android:id="@+id/iv_investigation"
               android:layout_width="40px"
               android:layout_height="90px"
               android:layout_centerHorizontal="true"
               android:src="@mipmap/default_icon"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_investigation"
              android:layout_alignTop="@id/iv_investigation"
              android:gravity="center"
              android:layout_alignBottom="@id/iv_investigation"
              android:textSize="32px"
              android:textColor="@color/colorAccent"
              android:layout_toRightOf="@id/iv_investigation"
              android:text="承办并调查取证"/>
    <View android:id="@+id/v_below_investigation"
          android:layout_width="1px"
          android:layout_height="200px"
          android:layout_below="@id/iv_investigation"
          android:layout_centerHorizontal="true"
          android:background="@color/colorAccent">

    </View>


</RelativeLayout>