<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:id="@+id/rl"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_goToChildLV"
        android:layout_width="80px"
        android:layout_height="40px"
        android:src="@mipmap/arrow_right"/>
    <TextView
        android:textSize="22px"
        android:text="54545"
        android:textColor="@android:color/darker_gray"
        android:layout_toLeftOf="@id/iv_goToChildLV"
        android:id="@+id/list_item_missionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12px"
        android:paddingBottom="12px"
        />

    <TextView
        android:textSize="22px"
        android:text="544"
        android:textColor="@android:color/darker_gray"
        android:layout_alignStart="@id/list_item_missionDate"
        android:layout_below="@id/list_item_missionDate"
        android:id="@+id/list_item_missionState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginBottom="6px"
        />

    <TextView
        android:textSize="22px"
        android:layout_toLeftOf="@id/list_item_missionDate"
        android:text="6565656"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/list_item_missionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12px"
    />




</RelativeLayout>