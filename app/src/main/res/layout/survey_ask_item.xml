<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:id="@+id/tv_ask_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20px"
              android:layout_marginTop="40px"
              android:text="住址：广东省"
              android:textColor="@color/colorBackground"
              android:textSize="34px"
    />

    <TextView android:id="@+id/tv_tag1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_ask_content"
              android:layout_marginLeft="20px"
              android:layout_marginTop="40px"
              android:text="答："
              android:textColor="@color/colorBackground"
              android:textSize="34px"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/tv_ask_content"
                  android:layout_marginTop="6px"
                  android:layout_toRightOf="@id/tv_tag1"
                  android:orientation="horizontal">
        <EditText android:id="@+id/et_answer_content"
                  android:layout_width="0dp"
                  android:layout_height="115px"
                  android:layout_weight="1"
                  android:maxLength="50"
                  android:paddingTop="15px"
                  android:textColor="@color/white"
                  android:textSize="34px"/>
        <ImageView android:layout_width="40px"
                   android:id="@+id/iv_record"
                   android:visibility="gone"
                   android:layout_height="40px"
                   android:src="@drawable/ease_chatting_setmode_voice_btn"/>
    </LinearLayout>
</RelativeLayout>