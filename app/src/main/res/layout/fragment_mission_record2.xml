<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="12px"
              android:background="@color/colorMain1"
              android:orientation="vertical"
              tools:context="gd.water.oking.com.cn.wateradministration_gd.fragment.MissionRecordFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_marginTop="5px"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:background="@drawable/cardview_bg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="35px"
            android:layout_height="80px"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="14px"
            android:layout_marginTop="12px"
            android:background="@drawable/mission_state_bg2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back"
            android:textColor="@color/colorMain3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="10px"
            android:text="任务管理"
            android:textColor="@color/colorMain4"
            android:textSize="34px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="12px"
            android:paddingRight="12px"
            android:text="/"
            android:textColor="@color/colorMain4"
            android:textSize="34px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="任务日志"
            android:textColor="@color/colorMain6"
            android:textSize="34px"/>

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/btn_waiting_selector"
            android:text="保存记录"
            android:textColor="#ffffff"
            android:textSize="34px"/>

        <Button
            android:id="@+id/complete_mission_button"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/btn_switch_case_selector"
            android:text="完成巡查"
            android:textColor="#ffffff"
            android:textSize="34px"/>

        <Button
            android:id="@+id/report_mission_button"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:background="@drawable/btn_addevidence_selector"
            android:text="任务上报"
            android:textColor="#ffffff"
            android:textSize="34px"/>
    </LinearLayout>

    <gd.water.oking.com.cn.wateradministration_gd.View.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12px"
            android:background="@drawable/cardview_bg"
            android:orientation="vertical"
            android:padding="12px">

            <RelativeLayout android:id="@+id/rl_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/member_item_bg2"
                            android:padding="12px">
                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="性质："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

                <TextView
                    android:id="@+id/type_nature"
                    android:layout_width="140px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_01"
                    android:text="97787"
                    android:textColor="@color/colorMain4"
                    android:textSize="34px"/>

                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:layout_toRightOf="@id/type_nature"
                    android:text="类型："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

                <TextView
                    android:id="@+id/tv_tasktype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12px"
                    android:layout_toRightOf="@id/tv_10"
                    android:textColor="@color/colorMain4"
                    android:textSize="34px"/>


                <Spinner

                    android:id="@+id/item_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown"
                    android:textSize="22px"
                />

                <TextView
                    android:id="@+id/tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/item_spinner"
                    android:text="事项："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>


                <Spinner
                    android:id="@+id/plan_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:layout_toLeftOf="@id/tv_04"
                    android:gravity="center"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown"
                    android:textSize="24px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/plan_spinner"
                    android:text="计划："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

            </RelativeLayout>

            <RelativeLayout android:id="@+id/rl_02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/member_item_bg2"
                            android:padding="12px">


                <TextView
                    android:id="@+id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left|center_vertical"
                    android:text="巡查区域："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

                <TextView
                    android:id="@+id/area_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_02"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="12px"
                    android:scrollbars="vertical"
                    android:text="45454"
                    android:textColor="@color/colorMain4"
                    android:textSize="34px"/>
            </RelativeLayout>


            <RelativeLayout android:id="@+id/rl_03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/member_item_bg2"
                            android:padding="12px">
                <TextView
                    android:id="@+id/tv_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="联合执法部门："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

                <EditText

                    android:id="@+id/part_other_editText"
                    android:layout_width="200px"
                    android:layout_height="130px"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_05"
                    android:layout_marginLeft="12px"
                    android:padding="20px"
                    android:layout_marginTop="10px"
                    android:hint="其他"
                    android:textColor="@color/colorMain6"
                    android:textColorHint="@color/colorMain4"
                    android:textSize="34px"/>

                <gd.water.oking.com.cn.wateradministration_gd.View.MyFlowTagLayout
                    android:id="@+id/part_flow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:layout_below="@id/tv_05"
                    android:textSize="34px"
                    android:layout_marginBottom="4px"
                    android:layout_marginTop="20px"
                    android:layout_toLeftOf="@id/part_other_editText"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:background="@drawable/member_item_bg2"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="12px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="执法装备："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

                <TextView
                    android:id="@+id/equipment_textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/colorMain4"
                    android:textSize="34px"/>

                <Button
                    android:id="@+id/edit_Equipment_Btn"
                    android:layout_width="40px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12px"
                    android:background="@drawable/btn_bg"
                    android:padding="5px"
                    android:scaleType="centerInside"
                    android:text="..."
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

            </LinearLayout>
            <Switch android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sw"
                    android:textSize="34px"
                    android:textColor="@color/white"
                    android:layout_marginLeft="12px"
                    android:text="从PC输入："/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/member_item_bg2"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:padding="12px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="巡查情况："
                        android:textColor="@color/colorMain6"
                        android:textSize="34px"/>

                    <EditText
                        android:id="@+id/summary_editText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/memo_edittext_bg"
                        android:elevation="5px"
                        android:ems="30"
                        android:gravity="left|top"
                        android:hint="在此处输入......"
                        android:inputType="textMultiLine"
                        android:minLines="10"
                        android:padding="12px"
                        android:textColor="@color/colorMain4"
                        android:textColorHint="@color/colorMain4"
                        android:textSize="34px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/member_item_bg2"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:padding="12px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="处理结果："
                        android:textColor="@color/colorMain6"
                        android:textSize="34px"/>

                    <EditText
                        android:id="@+id/leader_summary_editText"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/memo_edittext_bg"
                        android:elevation="5px"
                        android:ems="30"
                        android:gravity="left|top"
                        android:hint="在此处输入......"
                        android:inputType="textMultiLine"
                        android:minLines="10"
                        android:padding="12px"
                        android:textColor="@color/colorMain4"
                        android:textColorHint="@color/colorMain4"
                        android:textSize="34px"/>

                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/member_item_bg2"
                            android:padding="12px">
                <TextView
                    android:id="@+id/tv_06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="巡查人员："
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>
                <Button
                    android:id="@+id/sign_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="90px"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_margin="12px"
                    android:background="@drawable/btn_waiting_selector"
                    android:text="签名"
                    android:textColor="@color/colorMain6"
                    android:textSize="34px"/>

                <TextView
                    android:id="@+id/member_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:layout_below="@id/tv_06"
                    android:layout_toLeftOf="@id/sign_btn"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="12px"
                    android:textColor="@color/colorMain4"
                    android:textSize="34px"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:orientation="horizontal"
            >

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="5px"
                              android:layout_weight="1"
                              android:background="@drawable/multimedia_shap"
                              android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="12px"
                        android:text="图片"
                        android:textColor="@color/colorMain6"
                        android:textSize="34px"/>

                    <View android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:background="@color/lightsalmon"></View>
                    <GridView
                        android:id="@+id/pic_gridView"
                        android:layout_width="match_parent"
                        android:layout_height="500px"
                        android:layout_marginLeft="1px"
                        android:background="@drawable/cardview_bg"
                        android:horizontalSpacing="5px"
                        android:numColumns="5"
                        android:verticalSpacing="2px"/>

                </LinearLayout>


                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="5px"
                              android:layout_weight="1"
                              android:background="@drawable/multimedia_shap"
                              android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pic_gridView"
                        android:padding="12px"
                        android:text="视频"
                        android:textColor="@color/colorMain6"
                        android:textSize="34px"/>

                    <View android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="@color/lightsalmon"></View>
                    <GridView
                        android:id="@+id/video_gridView"
                        android:layout_width="match_parent"
                        android:layout_height="500px"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="5px"
                        android:background="@drawable/cardview_bg"
                        android:horizontalSpacing="5px"
                        android:numColumns="5"
                        android:verticalSpacing="2px"/>
                </LinearLayout>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_margin="5px"
                              android:layout_weight="1"
                              android:background="@drawable/multimedia_shap"
                              android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/video_gridView"
                        android:padding="12px"
                        android:text="定位"
                        android:textColor="@color/colorMain6"
                        android:textSize="34px"/>

                    <View android:layout_width="match_parent"
                          android:layout_height="1px"
                          android:background="@color/lightsalmon"></View>
                    <RelativeLayout android:id="@+id/rl_web"
                                    android:layout_width="match_parent"
                                    android:layout_height="500px"
                                    android:layout_marginTop="4px">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/map2"
                            android:visibility="gone"/>

                        <com.amap.api.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </com.amap.api.maps.MapView>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </gd.water.oking.com.cn.wateradministration_gd.View.MyScrollView>

</LinearLayout>
