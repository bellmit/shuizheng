<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="10px">

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3.5"
                  android:background="@drawable/cardview_bg"
                  android:orientation="vertical"
                  android:padding="8px">
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:layout_marginTop="8px"
              android:background="@color/login_bg"></View>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="任务名称："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <EditText
                android:id="@+id/et_taskname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="请输入..."
                android:maxLines="3"
                android:textColor="@color/login_bg"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="任务类型："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_tasktype"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:paddingLeft="8px"
                     android:paddingTop="8px"
                     android:spinnerMode="dropdown"
                     android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>


        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="发布人："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <TextView
                android:id="@+id/publisher_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="8px"
                android:paddingTop="8px"
                android:textColor="@color/login_bg"
                android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="审批领导："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_approver"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:paddingLeft="8px"
                     android:paddingTop="8px"
                     android:spinnerMode="dropdown"
                     android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="线索来源："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_source"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:paddingLeft="8px"
                     android:paddingTop="8px"
                     android:spinnerMode="dropdown"
                     android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="任务性质："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_tasknature"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:paddingLeft="8px"
                     android:paddingTop="8px"
                     android:spinnerMode="dropdown"
                     android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="开始时间："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Button

                android:textSize="@dimen/task_input_textsize"
                android:id="@+id/bt_select_begintime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18px"
                android:layout_weight="1"
                android:background="@drawable/btn_addevidence_selector"

                android:gravity="center"
                android:text="选择"
                android:textColor="@color/white"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="结束时间："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Button

                android:textSize="@dimen/task_input_textsize"
                android:id="@+id/bt_select_endtime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18px"
                android:layout_weight="1"
                android:background="@drawable/btn_addevidence_selector"
                android:gravity="center"
                android:text="选择"
                android:textColor="@color/white"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="接收人："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_recipient"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:paddingLeft="8px"
                     android:paddingTop="8px"
                     android:spinnerMode="dropdown"
                     android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="紧急程度："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_emergency"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:paddingLeft="8px"
                     android:paddingTop="8px"
                     android:spinnerMode="dropdown"
                     android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_mission_detail"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="巡查区域："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <EditText
                android:id="@+id/list_item_missionDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="请输入..."
                android:maxLines="3"
                android:textColor="@color/login_bg"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_mission_detail"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>


            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="任务描述："
                      android:textColor="@color/login_bg"
                      android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="请输入..."
                android:maxLines="3"
                android:textColor="@color/login_bg"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/task_input_textsize"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_input_height"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:layout_marginTop="36px"
            android:background="@drawable/btn_addevidence_selector"
            android:gravity="center"
            android:text="发     布"
            android:textColor="@color/white"
            android:textSize="@dimen/task_input_textsize"/>

    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10px"
                  android:layout_weight="2"
                  android:background="@drawable/cardview_bg"
                  android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="14px"
                  android:gravity="center"
                  android:padding="14px"
                  android:text="任务区域选择"
                  android:textColor="#fff" android:textSize="@dimen/task_input_textsize"/>

        <FrameLayout android:id="@+id/fl_web"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/webview_height">
        </FrameLayout>


    </LinearLayout>

</LinearLayout>