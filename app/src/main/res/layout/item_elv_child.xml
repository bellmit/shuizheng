<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="10px"
          android:layout_marginRight="10px"
          android:layout_marginTop="10px"
          android:background="@color/login_bg"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="80px"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <TextView android:layout_width="120px"
                  android:textSize="22px"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="下发人："
                  android:textColor="@color/login_bg"/>

        <View android:layout_width="1px"
              android:layout_height="120px"
              android:layout_marginLeft="10px"
              android:background="@color/login_bg"></View>
        <TextView
            android:textSize="22px"
            android:id="@+id/publisher_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:text="DEV队长"
            android:textColor="@color/login_bg"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <TextView android:layout_width="120px"
                  android:textSize="22px"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="审批人："
                  android:textColor="@color/login_bg"/>

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:background="@color/login_bg"></View>
        <TextView
            android:textSize="22px"
            android:id="@+id/approved_person_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:text="DEV队长"
            android:textColor="@color/login_bg"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="10px"
          android:layout_marginRight="10px"
          android:background="@color/login_bg"></View>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <TextView android:layout_width="120px"
                  android:textSize="22px"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="开始时间："
                  android:textColor="@color/login_bg"/>

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:background="@color/login_bg"></View>
        <TextView
            android:textSize="22px"
            android:id="@+id/begin_time_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:text="2017-05-05"
            android:textColor="@color/login_bg"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="任务性质："
                  android:textColor="@color/login_bg"
                  android:textSize="22px"/>

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:background="@color/login_bg"></View>
        <TextView
            android:textSize="22px"
            android:id="@+id/mission_type_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10px"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingTop="10px"
            android:text="目标核查"
            android:textColor="@color/login_bg"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="10px"
          android:layout_marginRight="10px"
          android:background="@color/login_bg"></View>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <TextView android:layout_width="120px"
                  android:textSize="22px"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="成员："
                  android:textColor="@color/login_bg"/>

        <View android:layout_width="1px"
              android:layout_height="120px"
              android:layout_marginLeft="10px"
              android:background="@color/login_bg"></View>
        <TextView
            android:textSize="22px"
            android:id="@+id/list_item_missionMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:text="DEV队长"
            android:textColor="@color/login_bg"/>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="10px"
          android:layout_marginRight="10px"
          android:background="@color/login_bg"></View>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <TextView android:layout_width="120px"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textSize="22px"
                  android:text="巡查区域："
                  android:textColor="@color/login_bg"/>

        <View android:layout_width="1px"
              android:layout_height="120px"
              android:layout_marginLeft="10px"
              android:background="@color/login_bg"></View>
        <TextView
            android:textSize="22px"
            android:id="@+id/list_item_missionDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:text="西江石板沙尾大桥月睦州黄埠村交接河段"
            android:textColor="@color/login_bg"/>
        <View android:layout_width="1px"
              android:layout_height="120px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="10px"
          android:layout_marginRight="10px"
          android:background="@color/login_bg"></View>

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_01"
                    android:layout_height="wrap_content"
    >

        <View android:id="@+id/v_01"
              android:layout_width="1px"
              android:layout_height="120px"
              android:layout_marginLeft="10px"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>

        <Button

            android:id="@+id/list_item_missionRecord"
            android:layout_width="300px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/v_01"
            android:background="@drawable/btn_addevidence_selector"
            android:text=""
            android:textColor="@color/colorMain6"
            android:textSize="22px"/>
        <View android:layout_width="1px"
              android:layout_height="120px"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10px"
              android:background="@color/login_bg"></View>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="10px"
          android:layout_marginRight="10px"
          android:background="@color/login_bg"></View>


</LinearLayout>

