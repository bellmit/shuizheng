<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10px"
              android:background="@drawable/cardview_bg"
              android:orientation="horizontal"
              android:paddingLeft="40px"
              android:paddingRight="40px"
              android:paddingTop="100px"
    tools:context="gd.water.oking.com.cn.wateradministration_gd.fragment.UserInfoFragment">

    <!-- TODO: Update blank fragment layout -->


            <LinearLayout
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="60px"
                    android:id="@+id/user_pic_iv"
                    android:layout_width="450px"
                    android:layout_height="450px"
                    android:layout_gravity="center"
                    android:background="@drawable/datetimeview_bg"
                    android:padding="20px"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/change_pic_textView"
                    android:layout_width="100px"
                    android:layout_height="70px"
                    android:layout_gravity="center"
                    android:layout_marginTop="40px"
                    android:background="@drawable/datetimeview_bg"
                    android:gravity="center"
                    android:padding="8px"
                    android:text="更 换"
                    android:textColor="@color/colorMain4"
                    android:textSize="32px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="20px"
                    android:layout_width="match_parent"
                    android:layout_height="600px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="姓名："
                            android:textColor="@color/colorMain6"
                            android:textSize="32px" />

                        <TextView
                            android:id="@+id/name_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/colorMain4"
                            android:textSize="32px" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLine1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="部门："
                            android:textColor="@color/colorMain6"
                            android:textSize="32px" />

                        <TextView
                            android:id="@+id/dept_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/colorMain4"
                            android:textSize="32px" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/colorLine1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="联系电话："
                            android:textColor="@color/colorMain6"
                            android:textSize="32px" />

                        <FrameLayout
                            android:layout_width="400px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/phone_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:inputType="phone"
                                android:text="13701234567"
                                android:textColor="@color/colorMain4"
                                android:textSize="32px" />

                            <EditText
                                android:id="@+id/phone_editText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:textColor="@color/colorMain4"
                                android:textSize="32px"
                                android:visibility="invisible" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="80px">

                            <TextView
                                android:id="@+id/change_phone_textView"
                                android:layout_width="100px"
                                android:layout_height="60px"
                                android:layout_gravity="center"
                                android:background="@drawable/datetimeview_bg"
                                android:gravity="center"
                                android:text="修 改"
                                android:textColor="@color/colorMain4"
                                android:textSize="32px" />

                            <Button
                                android:id="@+id/change_phone_btn"
                                android:layout_width="100px"
                                android:layout_height="60px"
                                android:layout_gravity="center"
                                android:background="@drawable/datetimeview_bg"
                                android:gravity="center"
                                android:text="确认"
                                android:textColor="@color/colorMain4"
                                android:textSize="32px"
                                android:visibility="invisible" />
                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLine1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/change_password_btn"
                            android:layout_width="140px"
                            android:layout_height="80px"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_waiting_selector"
                            android:text="修改密码"
                            android:textColor="@color/colorMain6"
                            android:textSize="32px" />

                        <Button
                            android:id="@+id/signout_btn"
                            android:layout_width="140px"
                            android:layout_height="80px"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40px"
                            android:background="@drawable/btn_switch_case_selector"
                            android:text="退出当前帐号"
                            android:textColor="@color/colorMain6"
                            android:textSize="32px" />
                        <Button
                            android:id="@+id/bt_finish"
                            android:layout_marginLeft="40px"
                            android:layout_width="140px"
                            android:layout_height="80px"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_addevidence_selector"
                            android:text="退出应用"
                            android:textColor="@color/colorMain6"
                            android:textSize="32px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

</LinearLayout>
