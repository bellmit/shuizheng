<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <ImageView android:id="@+id/iv_record"
               android:layout_width="40px"
               android:layout_height="90px"
               android:layout_centerHorizontal="true"
               android:src="@mipmap/default_icon"
    />
    <TextView android:id="@+id/tv_record"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toStartOf="@+id/iv_record"
              android:layout_alignTop="@id/iv_record"
              android:layout_alignBottom="@id/iv_record"
              android:gravity="center"
              android:text="立案"
              android:textColor="@color/colorAccent"
              android:textSize="32px"/>
    <View android:id="@+id/v_below_record"
          android:layout_width="1px"
          android:layout_height="200px"
          android:layout_below="@id/iv_record"
          android:layout_centerHorizontal="true"
          android:background="@color/colorAccent">
    </View>
    <View android:id="@+id/v_toright_record"
          android:layout_width="200px"
          android:layout_height="3px"
          android:layout_marginTop="50px"
         android:layout_alignTop="@id/iv_record"
          android:layout_toRightOf="@id/iv_record"
          android:background="@color/colorAccent"></View>


    <ImageView android:id="@+id/iv_supplementary_evidence"
               android:layout_width="40px"
               android:layout_height="90px"
               android:layout_alignTop="@id/iv_record"
               android:layout_toEndOf="@+id/v_toright_record"
               android:src="@mipmap/default_icon"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_supplementary_evidence"
              android:layout_alignTop="@id/iv_supplementary_evidence"
              android:gravity="center"
              android:layout_alignBottom="@id/iv_supplementary_evidence"
              android:textSize="32px"
              android:textColor="@color/colorAccent"
              android:layout_toRightOf="@id/iv_supplementary_evidence"
              android:text="补充证据"/>

</RelativeLayout>