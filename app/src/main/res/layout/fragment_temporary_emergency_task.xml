<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="10px">

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="3.5"
                  android:background="@drawable/cardview_bg"
                  android:orientation="vertical"
                  android:padding="8px">
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:layout_marginTop="8px"
              android:background="@color/login_bg"></View>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:textSize="@dimen/task_input_textsize"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="任务名称："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <EditText
                android:id="@+id/et_taskname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/task_input_textsize"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="请输入..."
                android:maxLines="3"
                android:textColor="@color/login_bg"
                android:textColorHint="@android:color/darker_gray"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="任务类型："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_tasktype"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:gravity="center"
                     android:textSize="26px"
                     android:overlapAnchor="false"
                     android:spinnerMode="dropdown"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>


        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="申请人："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <TextView
                android:id="@+id/publisher_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8px"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/task_input_textsize"
                android:paddingLeft="8px"
                android:paddingTop="8px"
                android:text="DEV队长"
                android:textColor="@color/login_bg"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="审批领导："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_approver"
                     android:layout_width="0dp"
                     android:textSize="26px"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:overlapAnchor="false"
                     android:spinnerMode="dropdown"/>




            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="线索来源："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_source"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:textSize="26px"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:spinnerMode="dropdown"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="任务性质："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Spinner android:id="@+id/sp_tasknature"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_margin="8px"
                     android:layout_weight="1"
                     android:textSize="26px"
                     android:gravity="center"
                     android:overlapAnchor="false"
                     android:spinnerMode="dropdown"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:textSize="@dimen/task_input_textsize"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="开始时间："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Button

                android:textSize="@dimen/task_input_textsize"
                android:id="@+id/bt_select_begintime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18px"
                android:layout_weight="1"
                android:background="@drawable/btn_addevidence_selector"

                android:gravity="center"
                android:text="选择"
                android:textColor="@color/white"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:textSize="@dimen/task_input_textsize"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="结束时间："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <Button

                android:textSize="@dimen/task_input_textsize"
                android:id="@+id/bt_select_endtime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18px"
                android:layout_weight="1"
                android:background="@drawable/btn_addevidence_selector"
                android:gravity="center"
                android:text="选择"
                android:textColor="@color/white"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_input_height"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:text="成员："
                      android:textSize="@dimen/task_input_textsize"
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <TextView
                android:id="@+id/list_item_missionMember"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="3"
                android:ellipsize="end"
                android:textSize="@dimen/task_input_textsize"
                android:gravity="left|center_vertical"
                android:maxLines="4"
                android:textColor="@color/login_bg"/>
            <Button

                android:id="@+id/bt_select_members"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="18px"
                android:textSize="@dimen/task_input_textsize"
                android:layout_weight="1"
                android:background="@drawable/btn_addevidence_selector"
                android:gravity="center"
                android:text="点击获取"
                android:textColor="@color/white"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_mission_detail"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="核查区域："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <EditText
                android:id="@+id/list_item_missionDetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/task_input_textsize"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="请输入..."
                android:maxLines="3"
                android:textColor="@color/login_bg"
                android:textColorHint="@android:color/darker_gray"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/task_mission_detail"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>

            <TextView android:layout_width="116px"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/task_input_textsize"
                      android:text="任务描述："
                      android:textColor="@color/login_bg"/>

            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="8px"
                  android:background="@color/login_bg"></View>
            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8px"
                android:layout_marginRight="8px"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="@dimen/task_input_textsize"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:hint="请输入..."
                android:maxLines="3"
                android:textColor="@color/login_bg"
                android:textColorHint="@android:color/darker_gray"/>
            <View android:layout_width="1px"
                  android:layout_height="match_parent"
                  android:layout_marginRight="8px"
                  android:background="@color/login_bg"></View>
        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginLeft="8px"
              android:layout_marginRight="8px"
              android:background="@color/login_bg"></View>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_input_height"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:layout_marginTop="36px"
            android:background="@drawable/btn_addevidence_selector"
            android:gravity="center"
            android:text="紧急任务发布"
            android:textColor="@color/holo_red_light"
            android:textSize="@dimen/task_input_textsize"/>
    </LinearLayout>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10px"
                  android:layout_weight="2"
                  android:background="@drawable/cardview_bg"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="14px"
                  android:gravity="center"
                  android:padding="14px"
                  android:text="请选择队员"
                  android:textColor="@color/holo_red_light"
                  android:textSize="@dimen/task_input_textsize"/>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:layout_marginTop="5px"
              android:background="@color/login_bg"></View>

        <ListView android:id="@+id/lv_members"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginTop="5px"
                  android:layout_weight="1"
                  android:visibility="gone"/>

        <Button
            android:id="@+id/bt_okselect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_input_height"
            android:layout_margin="36px"
            android:background="@drawable/btn_addevidence_selector"
            android:gravity="center"
            android:text="确     定"
            android:textColor="@color/white"
            android:textSize="@dimen/task_input_textsize"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>